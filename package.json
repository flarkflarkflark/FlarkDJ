{
  "name": "flark-dj",
  "version": "1.0.0",
  "description": "A comprehensive DJ toolkit plugin with advanced effects and modulation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "dev": "tsc --watch",
    "package": "npm run build && npm pack",
    "dist": "bash scripts/create-distribution.sh",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "dj",
    "audio",
    "effects",
    "music",
    "mixer",
    "plugin"
  ],
  "author": "FlarkDJ Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "web-audio-api": "^0.2.2"
  },
  "build": {
    "appId": "com.flarkdj.app",
    "productName": "FlarkDJ",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": ["dir"],
      "category": "public.app-category.music"
    },
    "win": {
      "target": ["dir"]
    },
    "linux": {
      "target": ["dir"],
      "category": "Audio"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "skipLibCheck": true,
          "lib": [
            "ES2020",
            "DOM"
          ]
        }
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
